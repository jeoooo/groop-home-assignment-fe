# Firebase Emulator Ports (for development only - uncomment for local development)
# NEXT_PUBLIC_AUTH_EMULATOR_PORT=9099
# NEXT_PUBLIC_FIRESTORE_EMULATOR_PORT=8080

# Environment
NODE_ENV=development